<!DOCTYPE html>
<html lang="en">
<head>
  <% if flash[:success] %>
    <div class="fixed top-4 right-4 bg-green-500/90 text-white px-4 py-2 rounded-lg shadow-md z-50">
      <%= flash[:success] %>
    </div>
  <% end %>
  <% if flash[:error] %>
    <div class="fixed top-4 right-4 bg-rose-500/90 text-white px-4 py-2 rounded-lg shadow-md z-50">
      <%= flash[:error] %>
    </div>
  <% end %>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-sans bg-gradient-to-br from-[#a2d2ff] via-[#bde0fe] to-[#cdb4db] flex flex-col items-center min-h-screen p-4 sm:p-6 text-gray-900">

  <div class="w-full max-w-md sm:max-w-lg bg-white/25 backdrop-blur-xl rounded-2xl p-4 sm:p-6 shadow-xl">
    <h1 class="text-xl sm:text-2xl font-semibold text-center text-sky-700 mb-4">Edit Product</h1>

    <form action="/products/<%= @product['id'] %>/update" method="post" class="space-y-4">
      <!-- Name -->
      <div>
        <label class="block font-medium mb-1 text-sm sm:text-base">Name</label>
        <input type="text" name="name" value="<%= @product['name'] %>"
               class="w-full p-3 rounded-lg bg-white/50 focus:ring-2 focus:ring-sky-400 outline-none text-sm sm:text-base">
      </div>

      <!-- Quantity -->
      <div>
        <label class="block font-medium mb-1 text-sm sm:text-base">Quantity</label>
        <input type="number" name="quantity" value="<%= @product['quantity'] %>"
               class="w-full p-3 rounded-lg bg-white/50 focus:ring-2 focus:ring-sky-400 outline-none text-sm sm:text-base">
      </div>

      <!-- Price -->
      <div>
        <label class="block font-medium mb-1 text-sm sm:text-base">Price</label>
        <input type="number" step="0.01" name="price" value="<%= @product['price'] %>"
               class="w-full p-3 rounded-lg bg-white/50 focus:ring-2 focus:ring-sky-400 outline-none text-sm sm:text-base">
      </div>

      <!-- Category + Suggest Button -->
      <div>
        <label class="block font-medium mb-1 text-sm sm:text-base">Category (optional)</label>
        <div class="flex flex-col sm:flex-row gap-2">
          <input type="text" name="category"
                 value="<%= (@prefill_category && !@prefill_category.empty?) ? @prefill_category : (@product['category'] || '') %>"
                 placeholder="Type a category â€” or invent one"
                 class="flex-1 p-3 rounded-lg bg-white/50 focus:ring-2 focus:ring-sky-400 outline-none text-sm sm:text-base">
          <button formaction="/products/suggest_category" formmethod="post" name="name" value="<%= @product['name'] %>"
                  class="px-4 py-2 rounded-md text-sm sm:text-base font-semibold bg-gray-800 text-white hover:bg-gray-700 transition w-full sm:w-auto">
            ðŸ¤– Suggest
          </button>
        </div>
      </div>

      <!-- Save + Cancel Buttons -->
      <div class="flex flex-col sm:flex-row gap-3">
        <button type="submit"
                class="w-full sm:w-auto bg-gradient-to-r from-cyan-400 to-indigo-500 text-white px-5 py-3 rounded-lg text-sm sm:text-base font-semibold shadow hover:scale-105 hover:from-indigo-500 hover:to-cyan-400 transition">
          Save Changes
        </button>
        <a href="/products"
           class="w-full sm:w-auto px-5 py-3 rounded-lg text-sm sm:text-base font-semibold bg-gray-200 text-gray-800 hover:bg-gray-300 transition text-center">
          Cancel
        </a>
      </div>
    </form>

    <!-- Current Category Preview -->
    <div class="mt-6 text-center">
      <div class="text-xs sm:text-sm text-gray-700">Current Category Preview:</div>
      <% cat = (@prefill_category && !@prefill_category.empty?) ? @prefill_category : (@product['category'] || "") %>
      <span class="inline-block mt-2 px-2 py-1 rounded-md text-xs sm:text-sm font-semibold
                   <%= cat.to_s.strip.empty? ? 'bg-gray-100 text-gray-600' : 'bg-purple-100 text-purple-700' %>">
        <%= cat.to_s.strip.empty? ? "â€”" : cat %>
      </span>
    </div>
  </div>

</body>
</html>