<!DOCTYPE html>
<html lang="en">
<head>
  <% if flash[:success] %>
  <div class="mb-4 rounded-lg bg-green-500/90 text-white px-4 py-2 text-center font-semibold shadow-lg">
    <%= flash[:success] %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="mb-4 rounded-lg bg-red-500/90 text-white px-4 py-2 text-center font-semibold shadow-lg">
    <%= flash[:error] %>
  </div>
<% end %>
  <meta charset="UTF-8">
  <title>Edit Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-blue-100 to-blue-200 min-h-screen flex items-center justify-center p-6">

  <div class="w-full max-w-lg bg-white/40 backdrop-blur-md shadow-xl rounded-2xl p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Edit Product</h2>

    <!-- Form -->
    <form action="/products/<%= @product["id"] %>/update" method="post" class="space-y-5">
      
      <!-- Name -->
      <div>
        <label for="name" class="block font-semibold text-gray-700 mb-2">Name:</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          value="<%= @product["name"] %>" 
          required
          class="w-full p-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-400 focus:outline-none"
        >
      </div>

      <!-- Quantity -->
      <div>
        <label for="quantity" class="block font-semibold text-gray-700 mb-2">Quantity:</label>
        <input 
          type="number" 
          id="quantity" 
          name="quantity" 
          value="<%= @product["quantity"] %>" 
          required
          class="w-full p-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-400 focus:outline-none"
        >
      </div>

      <!-- Price -->
      <div>
        <label for="price" class="block font-semibold text-gray-700 mb-2">Price:</label>
        <input 
          type="number" 
          step="0.01" 
          id="price" 
          name="price" 
          value="<%= @product["price"] %>" 
          required
          class="w-full p-3 rounded-lg border border-gray-300 shadow-sm focus:ring-2 focus:ring-blue-400 focus:outline-none"
        >
      </div>

      <!-- Submit Button -->
      <button 
        type="submit" 
        class="w-full bg-gradient-to-r from-cyan-400 to-blue-500 text-white py-3 rounded-lg font-semibold shadow-lg hover:scale-105 transition"
      >
        Update Product
      </button>
    </form>

    <!-- Back link -->
    <p class="mt-6 text-center">
      <a href="/products" class="inline-block text-blue-600 hover:text-blue-800 font-medium underline">
        ‚Üê Back to Products
      </a>
    </p>
  </div>

</body>
</html>